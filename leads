  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <script>
    function submitForm(event) {
      event.preventDefault();

      const url = "https://script.google.com/macros/s/AKfycbwmBUb2DCM9LvCbF5wG8wy6v2YohhuqJMfSwqTZQV6PRumwJk6_H3pCwbWM7iGks_f4RQ/exec"; // Replace with your actual URL

      const formData = {
        name: document.getElementById("name").value,
        mobile: document.getElementById("mobile").value,
        email: document.getElementById("email").value,
        bank: document.getElementById("bank").value,
        referral: document.getElementById("referral").value
      };

      fetch(url, {
        method: "POST",
        body: JSON.stringify(formData),
        headers: { "Content-Type": "application/json" }
      })
      .then(response => response.text())
      .then(data => {
        const redirectMap = {
          "HDFC": "https://www.hdfc.com",
          "ICICI": "https://www.icicibank.com",
          "SBI": "https://www.onlinesbi.sbi",
          "Kotak bank": "https://www.kotak.com"
        };

        const redirectUrl = redirectMap[formData.bank];
        if (redirectUrl) {
          window.location.href = redirectUrl;
        } else {
          alert("Bank URL not found");
        }
      })
      .catch(error => alert("Error: " + error));
    }
  </script>
</head>
<body class="bg-light">
